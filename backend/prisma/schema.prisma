generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Enums
enum Role {
  ADMIN
  TEACHER
  SECRETARY
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum ActionType {
  APPROVED
  REJECTED
}

enum Gender {
  male
  female
  other
}

model Teacher {
  id            String       @id @default(cuid())
  name          String
  contactNumber String       @unique
  password      String
  email         String       @unique
  createdAt     DateTime     @default(now())
  address       String?
  bankName      String?
  bankAccNumber String?
  ifscCode      String?
  Institution   Institution?
  Secretary     Secretary?
}

model Institution {
  institution_id String     @id @default(cuid())
  name           String     @unique
  teacherId      String     @unique
  teacher        Teacher    @relation(fields: [teacherId], references: [id])
  createdAt      DateTime   @default(now())
  Secretary      Secretary?

  @@index([teacherId])
}

model Secretary {
  id             String      @id @default(cuid())
  name           String
  contactNumber  String      @unique
  password       String
  email          String      @unique
  createdAt      DateTime    @default(now())
  address        String?
  bankName       String?
  bankAccNumber  String?
  ifscCode       String?
  teacherId      String      @unique
  teacher        Teacher     @relation(fields: [teacherId], references: [id])
  institution_id String      @unique
  institution    Institution @relation(fields: [institution_id], references: [institution_id])
}

model UsersTemp {
  id              String      @id @default(cuid())
  fullName        String
  email           String      @unique
  passwordHash    String
  role            Role
  contactNumber   String      @unique
  collegeName     String
  createdAt       DateTime    @default(now())
  adminAction     ActionType?
  adminActionTime DateTime?
}


model Group {
  id            String           @id @default(cuid())
  groupName     String?
  members       CyberWarrior[]
  impacts       ImpactActivity[]
  presentations Presentation[]
  createdAt     DateTime         @default(now())
}

model CyberWarrior {
  id      String @id @default(cuid())
  groupId String
  group   Group  @relation(fields: [groupId], references: [id])
  name    String

  createdAt DateTime @default(now())

  @@index([groupId])
}

//Impact Activity 
model ImpactActivity {
  id      String @id @default(cuid())
  groupId String
  group   Group  @relation(fields: [groupId], references: [id])

  organizationName    String?
  leaderName          String?
  date                DateTime?
  messagePropagated   String?
  activityDurationMin Int?
  location            String?
  participantsCount   Int?

  resourcesInvolved String?
  socialMediaLinks  String?
  mediaLinks        String?
  remarks           String?
  feedback          String?    // URL to uploaded feedback PDF
  photos            String[]   // array of string bcoz it can have multiple photos urls

  createdAt DateTime @default(now())

  @@index([groupId])
}

enum Class {
  Five
  Six
  Seven
  Eight
  Nine
  Ten
  Eleven
  Twelve
  SrCollege
}

// Presentation Details
model Presentation {
  id      String @id @default(cuid())
  groupId String
  group   Group  @relation(fields: [groupId], references: [id])

  mentorFaculty String?
  classType     String
  schoolName    String
  taluka        String
  city          String
  district      String
  principalName String
  schoolContact String
  medium        String?
  date          DateTime
  studentsClass Students[]
  feedback      String?    // URL to uploaded feedback PDF
  photos        String[]   // array of string bcoz it can have multiple photos urls

  createdAt DateTime @default(now())

  @@index([groupId])
}

model Students {
  id             String        @id @default(cuid())
  classType      Class
  boysCount      Int
  GirlsCount     Int
  createdAt      DateTime      @default(now())
  presentation   Presentation? @relation(fields: [presentationId], references: [id])
  presentationId String?
}

model Mass_Activity {
  id                String    @id @default(cuid())

  activityName        String
  activityDescription String
  date                DateTime
  duration            String     
  location            String
  participantsCount   Int
  stakeholders        String     
  socialMediaLinks    String[]
  mediaLinks          String[]
  photos              String[]

  institutionId   String
  institution     Institution @relation(fields: [institutionId], references: [institution_id])


  createdAt           DateTime  @default(now())
  @@index([institutionId])
  
}

model ExecutionPlan {
  id        String   @id @default(cuid())

  week      String    

  // Presentation
  Presentation_Commited            Int?
  Presentatin_Achieved            Int?
  Presentation_Surplus            Int?

  Students_Sanitized_Commited     Int?
  Students_Sanitized_Achieved     Int?
  Sanitized_Surplus               Int?

  //Impact 
  Impact_Commited                 Int?
  Impact_Achieved                 Int?
  Impact_Surplus                  Int?

  Impact_Outreach_Commited        Int?
  Impact_Outreach_Achieved        Int?
  Impact_Outreach_Surplus         Int?

  // Mass
  Mass_Commited                   Int?
  Mass_Achieved                   Int?
  Mass_Surplus                    Int?

  Mass_Outreach_Commited          Int?
  Mass_Outreach_Achieved          Int?
  Mass_Outreach_Surplus           Int?

  
  institutionId   String
  institution     Institution @relation(fields: [institutionId], references: [institution_id])

  createdAt       DateTime   @default(now())

  @@index([institutionId])
  @@index([week])
}

model Meeting {
  id              String    @id @default(cuid())

  meetingNumber   String     
  meetingDate     DateTime   

  agendaItems     String[]   

  conclusion      String     
  remark          String?    

  
  attendancePhoto String?    // URL to uploaded attendance image
  geoTagPhoto     String?    // URL to geo-tagged photo

  institutionId   String
  institution     Institution @relation(fields: [institutionId], references: [institution_id])

  createdAt       DateTime @default(now())

  @@index([institutionId])
  @@index([meetingDate])
}

